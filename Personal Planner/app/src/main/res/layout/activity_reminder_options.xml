<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="examples.csci567.testfinalproject.ReminderOptions">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_birthday"
        android:text="Birthday"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_meeting"
        android:text="Meeting"
        android:textSize="20dp"
        android:layout_below="@+id/button_birthday"
        android:layout_marginTop="25dp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_payments"
        android:text="Payments"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:layout_below="@+id/button_meeting"
        />


</RelativeLayout>
