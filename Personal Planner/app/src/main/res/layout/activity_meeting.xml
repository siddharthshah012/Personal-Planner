<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="examples.csci567.testfinalproject.meeting">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="examples.csci567.testfinalproject.meeting">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_meeting"
            android:text="Meeting"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:textColor="#222"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_meeting"
            android:id="@+id/edit_name_meeting"
            android:hint="Name"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_name_meeting"
            android:id="@+id/edit_location_meeting"
            android:hint="Location"
            android:layout_marginTop="20dp"
            />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_location_meeting"
            android:id="@+id/edit_meeting_With"
            android:hint="Meeting with"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_notification_time_date"
            android:text="Notification Time and Date"
            android:textSize="@dimen/abc_text_size_headline_material"
            android:textColor="#222"
            android:layout_below="@+id/edit_meeting_With"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Picker"
            android:id="@+id/button_datepick_meeting"
            android:layout_below="@+id/text_notification_time_date"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_datepick_meeting"
            android:hint="MM/dd/yyyy"
            android:id="@+id/edit_date_meeting"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time Picker"
            android:id="@+id/button_timepick_meeting"
            android:layout_below="@+id/edit_date_meeting"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_timepick_meeting"
            android:hint="hh:mm"
            android:id="@+id/edit_time_meeting"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/button_save_meeting"
            android:layout_below="@+id/edit_time_meeting"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="110dp"
            />




</RelativeLayout>

</ScrollView>
